
@using APIGateway.Models;
@using System.Diagnostics;
@{
    ViewData["Title"] = "index";
    var purchases = ViewData["purchases"] as List<PurchaseHistory>;
}

<div style="width:70%;margin:auto;">
    <h1 style="display:inline-block">My Purchase </h1> <a style="margin:0 5px 0 20px" href="~/Home/Index">my purchase</a>|<a href="~/Login/Logout"style="margin:0 5px">Logout</a>
<div id="purchases">
    @foreach (PurchaseHistory purchase in purchases)
    {
        <div class="purchase-row">
            <div class="product">
                <img class="product-img" src="~/assets/1586316169(1).jpg" />
                <div>product name</div>
                <div>product description</div>
                <div id="download" class="download-button">Download</div>
            </div>
            <div class="purchase-detail">
                <table id="purchase-detail-table">
                    <tr>
                        <td>Purchased On:</td>
                        <td>@purchase.PurchaseDate</td>
                    </tr>
                    <tr>
                        <td>Quantity:</td>
                        <td>@purchase.Quantity</td>
                    </tr>
                    <tr>
                        <td>Activation Code:</td>
                        <td></td>
                    </tr>
                </table>
            </div>
        </div>
    }
                                                                                                                          </div>
</div>


<link rel="stylesheet" href="~/css/myPurchase.css" />
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/crypto/core-min.js"></script>
<script src="~/lib/crypto/sha256.js"></script>
<script src="~/js/myPurchase.js"></script>
