@{
    var accounts = ViewData["accounts"] as List<Account>;
}

<ul class="navbar-nav">
    @if (Context.Request.Cookies["UserId"] != null && accounts != null)
    {
        foreach(var account in accounts)
        { 
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Orders" asp-controller="Account" asp-action="Index" title="Manage">Hello @account.email!</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area=""  asp-controller="Account" asp-action="Logout">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" href="https://localhost:44334/Home/Index">Login</a>
        </li>
    }
</ul>

